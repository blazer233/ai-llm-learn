// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id                String             @id @default(uuid())
  email             String             @unique
  username          String             @unique
  password          String
  avatar            String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  // 关联关系
  scenes            Scene[]
  prompts           Prompt[]
  functionTemplates FunctionTemplate[]
  
  @@map("users")
}

// 场景表
model Scene {
  id                String             @id @default(uuid())
  name              String
  description       String?            @db.Text
  color             String?            // 场景标签颜色
  icon              String?            // 场景图标
  userId            String
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  // 关联关系
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompts           Prompt[]
  functionTemplates FunctionTemplate[]
  
  @@index([userId])
  @@map("scenes")
}

// 提示词表
model Prompt {
  id          String   @id @default(uuid())
  title       String
  content     String   @db.Text
  description String?  @db.Text
  tags        String?  // JSON 字符串，存储标签数组
  model       String?  // 推荐使用的模型
  temperature Float?   // 温度参数
  maxTokens   Int?     // 最大 token 数
  sceneId     String?
  userId      String
  isPublic    Boolean  @default(false) // 是否公开分享
  viewCount   Int      @default(0)     // 浏览次数
  likeCount   Int      @default(0)     // 点赞次数
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // 关联关系
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scene       Scene?   @relation(fields: [sceneId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([sceneId])
  @@map("prompts")
}

// 函数模板表
model FunctionTemplate {
  id          String   @id @default(uuid())
  name        String   // 函数名称
  code        String   @db.Text // 函数代码
  description String?  @db.Text // 函数描述
  language    String   @default("typescript") // 编程语言
  category    String?  // 分类（工具函数、业务逻辑等）
  tags        String?  // JSON 字符串，存储标签数组
  params      String?  @db.Text // JSON 字符串，参数定义
  returnType  String?  // 返回类型
  examples    String?  @db.Text // JSON 字符串，使用示例
  sceneId     String?
  userId      String
  isPublic    Boolean  @default(false) // 是否公开分享
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // 关联关系
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scene       Scene?   @relation(fields: [sceneId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([sceneId])
  @@index([language])
  @@index([category])
  @@map("function_templates")
}
